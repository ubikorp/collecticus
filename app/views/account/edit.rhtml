<% form_for(:user, :url => account_path, :html => {:method => :put}) do |f| -%>
  <p><label for="user_location">Location:</label><br/>
  <%= f.text_field(:location, :size => 50) %></p>
  
  <p><label for="user_interests">Interests:</label><br/>
  <%= f.text_area(:interests, :rows => 3, :cols => 50) %></p>
  
  <p><label for="user_bio">Bio:</label><br/>
  <%= f.text_area(:bio, :rows => 10, :cols => 50) %></p>
  
  <%= submit_tag('Update') %>
<% end -%>